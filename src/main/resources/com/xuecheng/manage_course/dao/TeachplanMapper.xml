<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuecheng.manage_course.dao.CourseMapper">
    <!-- 定义结果集map 解决实体类和数据库表 中字段不一致的问题或结果数据需要高度自定义-->
    <resultMap id="techplanMap" type="com.xuecheng.framework.domain.course.ext.TeachplanNode">
        <!--声明主键id-->
        <id property="id" column="one_id"/>
        <!-- 声明字段-->
        <result property="pname" column="one_pname"/>
        <!--一对多集合关系映射:配置sql 语句左外联two字段集合-->
        <collection property="children" ofType="com.xuecheng.framework.domain.course.ext.TeachplanNode">
            <id property="id" column="two_id"/>
            <result property="pname" column="two_pname"/>
            <!-- 一对多集合关系映射：配置sql 语句左外联three字段集合-->
            <collection property="children" ofType="com.xuecheng.framework.domain.course.ext.TeachplanNode">
                <id property="id" column="three_id"/>
                <result property="pname" column="three_pname"/>
            </collection>
        </collection>
    </resultMap>

    <!--查询课程计划-->
    <select id="selectList" resultMap="techplanMap" parameterType="String">
        SELECT
        a.id one_id,
        a.pname one_pname,
        b.id two_id,
        b.pname two_pname,
        c.id three_id,
        c.pname three_pname
        FROM
            teachplan a
        LEFT JOIN teachplan b ON b.parentid = a.id
        LEFT JOIN teachplan c ON c.parentid = b.id
        WHERE
            a.parentid = '0'
            <if test="_parameter!=null and_parameter!=''">
                AND a.courseid=#{courseId}
            </if>
        ORDER BY
            a.orderby,
            b.orderby,
            c.orderby
    </select>
</mapper>